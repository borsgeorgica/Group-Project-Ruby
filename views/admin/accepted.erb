<% arraySize = @accepted_orders.length %>
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Spicy Slice :: Accepted Orders</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0" />
        <meta name="author" content="Team23" />

        <!-- BOOTSTRAP CSS -->
        <link href="../style/bootstrap.min.css" rel="stylesheet">

        <!-- MAIN STYLES CSS -->
        <link href="../style/style.css" rel="stylesheet">

        <!-- References from online -->
        <!-- GOOGLE FONTS -->
        <link href="https://fonts.googleapis.com/css?family=Lato%7CRoboto+Slab" rel="stylesheet">

        <!-- FONT ICONS -->
        <link href="../style/font-awesome.min.css" rel="stylesheet" type="text/css"/>

        <!-- CAROUSEL SLIDERS -->
        <link href="../style/owl.carousel.css" rel="stylesheet" type="text/css"/>


        <!-- POPUP -->
        <link href="../style/magnific-popup.css" rel="stylesheet" type="text/css"/>

        <!-- ANIMATE -->
        <link href="../style/animate.min.css" rel="stylesheet" type="text/css"/>

    </head>

    <body>
        <%= erb :"admin/header" %>
        
        <section id="AcceptOrder">
            <div class="container text-center">
                <div class="text-center">
                    <h2 class="">Add accepted order</h2>
                </div>
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <div class="form-wrapper space-60">
                            <div id="response"></div>
                            <form method="POST"  id="contact-form">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group"><input class="form-control" type="text" name="username" placeholder="Twitter Username" required></div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                        	<select name="pizza" class="form-control dropdown">
                                        	<option value="" disabled selected>Pizza Type</option>
                                            <option value="Milano">Milano</option>
                                            <option value="Ardente">Ardente (H)</option>
                                            <option value="Sicilia">Sicilia</option>
                                            <option value="Verona">Verona</option>
                                            <option value="Roma">Roma (V)</option>
                                            <option value="ct">Cheese and Tomato (V)</option>
                                            <option value="MightyMeat">Mighty Meat</option>
                                            <option value="PepperoniPassion">Pepperoni passion</option>
                                            <option value="Texas">Texas BBQ</option>
                                            <option value="VegiSupreme">Vegi Supreme (V)</option>
                                            <option value="TandooriHot">Tandoori Hot (H)</option>
                                            <option value="ChickenFeast">Chicken feast</option>
                                            <option value="HotAndSpicy">Hot And Spicy (H)</option>
                                            <option value="VegiVolcano">Vegi Volcano</option>
                                            <option value="NewYorker">New Yorker</option>
                                          </select>
                                        </div>
                                </div>
                                
                            	<div class="col-md-12">
                            	        <div class="form-group">
                            	        	<select name="pizzaSize" class="form-control dropdown">
                            	        	<option value="" disabled selected>Pizza Size</option>
                            	            <option value="Small">Small</option>
                            	            <option value="Medium">Medium</option>
                            	            <option value="Large">Large</option>
                            	          </select>
                            	        </div>
                            	</div>
                            	
                            	<div class="col-md-12">
                            	        <div class="form-group">
                            	        	<select name="CurrentStatus" placeholder="Status" class="form-control dropdown">
                            	        	<option value="" disabled selected>Pizza Status</option>
                            	            <option value="Baking">Baking</option>
                            	            <option value="QualityCheck">Quality Check</option>
                            	            <option value="Delivery">Out For Delivery</option>
                            	          </select>
                            	        </div>
                            	</div>
                                <div class="form-group"><input class="btn btn-success" type="submit" value="Add Order"></div>
                                </div>
                            </form>
                            
                        </div>
                        </div>
                    </div>
                </div>
            </section>
        
        <!-- Order now information -->
        
        <section id="Tweet-order">
        		<div class="line">
        			<h2>Accepted Orders</h2>
        		</div>
        		<div class="row">
        			<div class="twitter-orders container col-md-offset-1 text-center" style="width=100%">
        			<table>
        		 		 <tr>
        		 		 	<th>Date &amp; Time </th>
        		    		<th>Twitter Username</th>
        		    		<th>Pizza Type</th> 
        		    		<th>Pizza Size</th> 
        		    		<th>Pizza Status</th>
        		    		<th>Update Status</th>  
        		    		<th>Save changes</th>
        		  		</tr>
                        <% for i in 0...arraySize %>
        		 		 <tr>
        		 		 	 <td><%= @accepted_orders[i][0]%></td>	
        		   			 <td><%= @accepted_orders[i][1]%></td>
        		   			 
        		   			         		    		 
        		   			 <td><%= @accepted_orders[i][4]%></td>
                             <td><%= @accepted_orders[i][5]%></td>
                             <td><%= @accepted_orders[i][3]%></td>
                             <form method = "POST">
        		    		 <td>
        		    		 	 <select name="CurrentStatus" placeholder="Status" class="form-control dropdown">
        		    		 	 		 <option value="" disabled selected>Update Status</option>
        		    		 	  		 <option value="Baking">Baking</option>
        		    		 	   		 <option value="QualityCheck">Quality Check</option>
        		    		 	   		<option value="Delivery">Out For Delivery</option>
        		    		 	 	</select>
        		    		 	 </td>
        		    		 <td><input class="button-twitter-order" type="submit" value="&#10003;"/><input type="hidden" name="date" value= "<%=@accepted_orders[i][0]%>" /></td></form>
        		    		   
        		  		</tr>
                         <% end %>
        		  		
        		  		
        		  		
        			</table>
        		</div>
            </div>
          </section> 
		  
		        
           <%= erb :footer %>
            
           </body>
</html>
